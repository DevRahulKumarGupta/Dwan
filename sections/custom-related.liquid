{% assign section_id = section.id | replace: '_', '' | downcase %}

{% liquid
  assign products_to_show = blank
  assign source_type = section.settings.product_source

  if source_type == 'metafield'
    if section.settings.metafield_namespace != blank and section.settings.metafield_key != blank
      assign metafield_value = product.metafields[section.settings.metafield_namespace][section.settings.metafield_key]
      if metafield_value != blank
        assign products_to_show = metafield_value.value
      endif
    endif
  elsif source_type == 'collection'
    if section.settings.related_collection != blank
      assign products_to_show = section.settings.related_collection.products
    endif
  elsif source_type == 'manual'
    assign products_to_show = section.settings.manual_products
  endif
%}

{% style %}
  .related-products-{{ section_id }} {
    display: block;
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .related-products__container-{{ section_id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .related-products__header-{{ section_id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: 32px;
  }

  .related-products__heading-{{ section_id }} {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin: 0;
    font-weight: 600;
  }

  .related-products__grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.products_per_row_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
  }

  .related-products__product-card-{{ section_id }} {
    display: flex;
    flex-direction: column;
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  }

  .related-products__product-card-{{ section_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .related-products__image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .related-products__image-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .related-products__content-{{ section_id }} {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .related-products__title-{{ section_id }} {
    font-size: {{ section.settings.product_title_size }}px;
    color: {{ section.settings.product_title_color }};
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.4;
  }

  .related-products__title-link-{{ section_id }} {
    color: inherit;
    text-decoration: none;
  }

  .related-products__title-link-{{ section_id }}:hover {
    text-decoration: underline;
  }

  .related-products__vendor-{{ section_id }} {
    font-size: 12px;
    color: {{ section.settings.vendor_color }};
    margin-bottom: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .related-products__price-{{ section_id }} {
    font-size: {{ section.settings.price_size }}px;
    color: {{ section.settings.price_color }};
    margin-bottom: 12px;
    font-weight: 600;
  }

  .related-products__price--compare-{{ section_id }} {
    text-decoration: line-through;
    color: {{ section.settings.compare_price_color }};
    margin-right: 8px;
    font-weight: 400;
  }

  .related-products__price--sale-{{ section_id }} {
    color: {{ section.settings.sale_price_color }};
  }

  .related-products__button-{{ section_id }} {
    width: 100%;
    padding: 12px 20px;
    background-color: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    margin-top: auto;
  }

  .related-products__button-{{ section_id }}:hover {
    background-color: {{ section.settings.button_hover_background }};
  }

  .related-products__button--sold-out-{{ section_id }} {
    background-color: {{ section.settings.sold_out_button_background }};
    color: {{ section.settings.sold_out_button_text }};
    cursor: not-allowed;
  }

  .related-products__button--sold-out-{{ section_id }}:hover {
    background-color: {{ section.settings.sold_out_button_background }};
  }

  .related-products__badge-{{ section_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 6px 12px;
    background-color: {{ section.settings.sale_badge_bg }};
    color: {{ section.settings.sale_badge_color }};
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
    z-index: 1;
  }

  .related-products__empty-state-{{ section_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .related-products__empty-state-{{ section_id }} svg {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
    opacity: 0.3;
  }

  .related-products__mobile-slider-{{ section_id }} {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .related-products__grid-{{ section_id }} {
      display: none;
    }

    .related-products__mobile-slider-{{ section_id }} {
      display: block;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .related-products__mobile-slider-{{ section_id }}::-webkit-scrollbar {
      display: none;
    }

    .related-products__slider-track-{{ section_id }} {
      display: flex;
      gap: 16px;
      padding-bottom: 16px;
    }

    .related-products__slider-item-{{ section_id }} {
      flex: 0 0 280px;
      max-width: 280px;
    }

    .related-products__heading-{{ section_id }} {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    .related-products__grid-{{ section_id }} {
      grid-template-columns: repeat({{ section.settings.products_per_row_tablet }}, 1fr);
    }
  }
{% endstyle %}

<related-products-{{ section_id }} class="related-products-{{ section_id }}" {{ section.shopify_attributes }}>
  <div class="related-products__container-{{ section_id }}">
    {% if section.settings.heading != blank %}
      <div class="related-products__header-{{ section_id }}">
        <h2 class="related-products__heading-{{ section_id }}">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}

    {% if products_to_show != blank and products_to_show.size > 0 %}
      <div class="related-products__grid-{{ section_id }}">
        {% for related_product in products_to_show limit: section.settings.products_to_show %}
          <div class="related-products__product-card-{{ section_id }}">
            <a href="{{ related_product.url }}" class="related-products__image-wrapper-{{ section_id }}">
              {% if related_product.compare_at_price > related_product.price and section.settings.show_sale_badge %}
                <span class="related-products__badge-{{ section_id }}">{{ section.settings.badge_text }}</span>
              {% endif %}

              {% if related_product.featured_image %}
                <img
                  src="{{ related_product.featured_image | image_url: width: 600 }}"
                  alt="{{ related_product.featured_image.alt | escape }}"
                  class="related-products__image-{{ section_id }}"
                  loading="lazy"
                  width="600"
                  height="600"
                >
              {% else %}
                <div class="related-products__image-{{ section_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>

            <div class="related-products__content-{{ section_id }}">
              {% if section.settings.show_vendor and related_product.vendor != blank %}
                <div class="related-products__vendor-{{ section_id }}">{{ related_product.vendor }}</div>
              {% endif %}

              <h3 class="related-products__title-{{ section_id }}">
                <a href="{{ related_product.url }}" class="related-products__title-link-{{ section_id }}">
                  {{ related_product.title }}
                </a>
              </h3>

              {% if section.settings.show_price %}
                <div class="related-products__price-{{ section_id }}">
                  {% if related_product.compare_at_price > related_product.price %}
                    <span class="related-products__price--compare-{{ section_id }}">
                      {{ related_product.compare_at_price | money }}
                    </span>
                    <span class="related-products__price--sale-{{ section_id }}">
                      {{ related_product.price | money }}
                    </span>
                  {% else %}
                    {{ related_product.price | money }}
                  {% endif %}
                </div>
              {% endif %}

              {% if section.settings.show_add_to_cart %}
                {% if related_product.available %}
                  <form action="/cart/add" method="post" class="related-products__form-{{ section_id }}">
                    <input type="hidden" name="id" value="{{ related_product.selected_or_first_available_variant.id }}">
                    <button type="submit" class="related-products__button-{{ section_id }}">
                      {{ section.settings.add_to_cart_text }}
                    </button>
                  </form>
                {% else %}
                  <button class="related-products__button-{{ section_id }} related-products__button--sold-out-{{ section_id }}" disabled>
                    {{ section.settings.sold_out_text }}
                  </button>
                {% endif %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>

      <div class="related-products__mobile-slider-{{ section_id }}">
        <div class="related-products__slider-track-{{ section_id }}">
          {% for related_product in products_to_show limit: section.settings.products_to_show %}
            <div class="related-products__slider-item-{{ section_id }}">
              <div class="related-products__product-card-{{ section_id }}">
                <a href="{{ related_product.url }}" class="related-products__image-wrapper-{{ section_id }}">
                  {% if related_product.compare_at_price > related_product.price and section.settings.show_sale_badge %}
                    <span class="related-products__badge-{{ section_id }}">{{ section.settings.badge_text }}</span>
                  {% endif %}

                  {% if related_product.featured_image %}
                    <img
                      src="{{ related_product.featured_image | image_url: width: 600 }}"
                      alt="{{ related_product.featured_image.alt | escape }}"
                      class="related-products__image-{{ section_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                  {% else %}
                    <div class="related-products__image-{{ section_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </a>

                <div class="related-products__content-{{ section_id }}">
                  {% if section.settings.show_vendor and related_product.vendor != blank %}
                    <div class="related-products__vendor-{{ section_id }}">{{ related_product.vendor }}</div>
                  {% endif %}

                  <h3 class="related-products__title-{{ section_id }}">
                    <a href="{{ related_product.url }}" class="related-products__title-link-{{ section_id }}">
                      {{ related_product.title }}
                    </a>
                  </h3>

                  {% if section.settings.show_price %}
                    <div class="related-products__price-{{ section_id }}">
                      {% if related_product.compare_at_price > related_product.price %}
                        <span class="related-products__price--compare-{{ section_id }}">
                          {{ related_product.compare_at_price | money }}
                        </span>
                        <span class="related-products__price--sale-{{ section_id }}">
                          {{ related_product.price | money }}
                        </span>
                      {% else %}
                        {{ related_product.price | money }}
                      {% endif %}
                    </div>
                  {% endif %}

                  {% if section.settings.show_add_to_cart %}
                    {% if related_product.available %}
                      <form action="/cart/add" method="post" class="related-products__form-{{ section_id }}">
                        <input type="hidden" name="id" value="{{ related_product.selected_or_first_available_variant.id }}">
                        <button type="submit" class="related-products__button-{{ section_id }}">
                          {{ section.settings.add_to_cart_text }}
                        </button>
                      </form>
                    {% else %}
                      <button class="related-products__button-{{ section_id }} related-products__button--sold-out-{{ section_id }}" disabled>
                        {{ section.settings.sold_out_text }}
                      </button>
                    {% endif %}
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% else %}
      <div class="related-products__empty-state-{{ section_id }}">
        {{ 'product-1' | placeholder_svg_tag }}
        <p>
          {% if source_type == 'metafield' %}
            No related products found. Add products to the metafield: {{ section.settings.metafield_namespace }}.{{ section.settings.metafield_key }}
          {% elsif source_type == 'collection' %}
            No products in the selected collection. Please select a collection with products.
          {% elsif source_type == 'manual' %}
            No products selected. Please add products manually.
          {% else %}
            Please configure the product source in the section settings.
          {% endif %}
        </p>
      </div>
    {% endif %}
  </div>
</related-products-{{ section_id }}>

<script>
  (function() {
    class RelatedProducts{{ section_id }} extends HTMLElement {
      connectedCallback() {
        this.forms = this.querySelectorAll('.related-products__form-{{ section_id }}');
        this.setupAddToCart();
      }

      setupAddToCart() {
        this.forms.forEach((form) => {
          form.addEventListener('submit', (event) => {
            event.preventDefault();

            const formData = new FormData(form);
            const button = form.querySelector('.related-products__button-{{ section_id }}');
            const originalText = button.textContent;

            button.textContent = 'Adding...';
            button.disabled = true;

            fetch('/cart/add.js', { method: 'POST', body: formData })
              .then(response => response.json())
              .then(() => {
                button.textContent = 'Added!';

                setTimeout(() => {
                  button.textContent = originalText;
                  button.disabled = false;
                }, 2000);

                fetch('/cart.js')
                  .then(response => response.json())
                  .then(cart => {
                    document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', {
                      bubbles: true,
                      detail: { cart }
                    }));
                  });
              })
              .catch((error) => {
                console.error('Error:', error);
                button.textContent = 'Error';
                setTimeout(() => {
                  button.textContent = originalText;
                  button.disabled = false;
                }, 2000);
              });
          });
        });
      }
    }

    customElements.define('related-products-{{ section_id }}', RelatedProducts{{ section_id }});
  })();
</script>

